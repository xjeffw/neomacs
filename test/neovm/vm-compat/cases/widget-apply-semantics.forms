; widget-apply callable-property semantics.

(let ((w '(button :action car :rest cdr :list list :bad 7)))
  (widget-apply w :action))

(let ((w '(button :action car :rest cdr :list list :bad 7)))
  (equal (widget-apply w :rest) '(:action car :rest cdr :list list :bad 7)))

(let ((w '(button :action car :rest cdr :list list :bad 7)))
  (equal (widget-apply w :list 1 2) (list w 1 2)))

(let ((w '(button :action car :rest cdr :list list :bad 7)))
  (widget-apply w :missing))

(condition-case err
    (let ((w '(button :bad 7)))
      (widget-apply w :bad))
  (error err))

(condition-case err
    (widget-apply)
  (error err))
